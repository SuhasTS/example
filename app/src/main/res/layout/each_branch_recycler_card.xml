<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:layout_margin="3dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/eachBranchCardImage"
        android:src="@drawable/background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="right"

        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eachBranchCardHeading"
            app:customTypeface="headingBold"
            tools:ignore="MissingPrefix"
            android:gravity="center"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eachBranchCardDay"
            android:gravity="bottom|left"
            app:customTypeface="subHeadingBold"
            tools:ignore="MissingPrefix"
            android:layout_below="@id/eachBranchCardHeading"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eachBranchCardTime"
            app:customTypeface="subHeadingBold"
            tools:ignore="MissingPrefix"
            android:gravity="bottom|right"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/eachBranchCardHeading"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customTypeface="subHeadingBold"
            tools:ignore="MissingPrefix"
            android:id="@+id/eachBranchCardCost"
            android:layout_below="@id/eachBranchCardDay"/>
    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>